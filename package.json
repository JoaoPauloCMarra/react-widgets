{
  "name": "react-widgets",
  "version": "1.0.0",
  "main": "dist/index.html",
  "private": true,
  "license": "MIT",
  "author": "JoaoPauloCMarra",
  "scripts": {
    "dev": "webpack serve --env NODE_ENV=development --env development --progress",
    "build": "webpack --env NODE_ENV=production --env production",
    "format": "prettier --config ./.prettierrc.js --write \"{src,__{tests,mocks}__}/**/*.{ts,tsx,scss}\"",
    "lint": "eslint --ext .tsx,.ts .",
    "test": "jest -u --colors",
    "serve": "yarn build && serve ./dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "preact": "^10.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@rbarilani/remove-source-map-url-webpack-plugin": "^1.1.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^5.2.0",
    "eslint": "^7.24.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "filemanager-webpack-plugin": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^6.2.1",
    "html-webpack-plugin": "^5.3.1",
    "husky": ">=6",
    "inline-source-webpack-plugin": "^1.4.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.4.0",
    "path": "^0.12.7",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "react-dev-utils": "^11.0.4",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "serve": "^11.3.2",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": [
    "defaults",
    "not ie < 11",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(scss|css|jpg|png|gif)$": "<rootDir>/__mocks__/file.mock.js",
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "engines": {
    "node": "12"
  }
}
